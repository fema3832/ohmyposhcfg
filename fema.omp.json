{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#cbff78",
          "style": "plain",
          "template": "{{ .UserName }} ",
          "type": "session"
        },
        {
          "foreground": "#81adff",
          "style": "plain",
          "template": "{{ .HostName }}",
          "type": "session"
        },
        {
          "foreground": "#028513",
		  "style": "plain",
          "template": "[{{ .Path }}]",
          "type": "path"
        },
        {
          "foreground": "#C678DD",
          "properties": {
            "fetch_status": true
          },
          "style": "plain",
          "template": "<#ffffff>on</> {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }} ",
          "type": "session"
        },
        {
          "foreground": "#cbff78",
          "style": "plain",
          "template": " $ ",
          "type": "session"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 2
}
