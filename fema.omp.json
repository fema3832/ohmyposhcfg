{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#cbff78",
          "style": "plain",
          "template": "{{ .UserName }} ",
          "type": "session"
        },
        {
          "foreground": "#81adff",
          "style": "plain",
          "template": "{{ .HostName }}",
          "type": "session"
        },
        {
          "foreground": "#028513",
		  "style": "plain",
          "template": "[{{ .Path }}]",
          "type": "path"
        },
		{
          "background": "#2e9599",
		  "style": "plain",
          "template": "{{ .HEAD }}",
          "type": "git",
		  "properties": {
            "branch_icon": ""
          },
		  "background": "#000000",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#f36943{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#a8216b{{ end }}",
            "{{ if gt .Ahead 0 }}#35b5ff{{ end }}",
            "{{ if gt .Behind 0 }}#f89cfa{{ end }}"
          ],
          "foreground": "#193549",
          "foreground_templates": [
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ffffff{{ end }}"
          ]
        },
        {
          "foreground": "#cbff78",
          "style": "plain",
          "template": "$ ",
          "type": "session"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 2
}
