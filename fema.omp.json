{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#cbff78",
          "style": "plain",
          "template": "{{ .UserName }} ",
          "type": "session"
        },
        {
          "foreground": "#81adff",
          "style": "plain",
          "template": "{{ .HostName }}",
          "type": "session"
        },
        {
          "foreground": "#028513",
		  "style": "plain",
          "template": "[{{ .Path }}]",
          "type": "path",
		  "properties": {
            "style": "full"
          }
        },
		{
		  "style": "powerline",
          "template": "[{{ .HEAD }}]",
          "type": "git",
		  "properties": {
			"branch_icon": ""
          },
		  "foreground": "#A50000",
        },
        {
          "foreground": "#cbff78",
          "style": "plain",
          "template": "$ ",
          "type": "session"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 2
}
