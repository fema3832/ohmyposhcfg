{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#cbff78",
          "style": "plain",
          "template": "{{ .UserName }} ",
          "type": "session"
        },
        {
          "foreground": "#81adff",
          "style": "plain",
          "template": "{{ .HostName }}",
          "type": "session"
        },
        {
          "foreground": "#028513",
		  "style": "plain",
          "template": "[{{ .Path }}]",
          "type": "path",
		  "properties": {
            "style": "full"
          }
        },
		{
		  "style": "powerline",
          "template": "{{ .HEAD }}",
          "type": "git",
		  "properties": {
			"branch_icon": ""
          },
		  "foreground": "#193549",
		  "background": "#ffeb3b",
		  "background_templates": [
			"{{ if or (.Working.Changed) (.Staging.Changed) }}#FFEB3B{{ end }}",
			"{{ if and (gt .Ahead 0) (gt .Behind 0) }}#FFCC80{{ end }}",
			"{{ if gt .Ahead 0 }}#B388FF{{ end }}",
			"{{ if gt .Behind 0 }}#B388FB{{ end }}"
		  ]
        },
        {
          "foreground": "#cbff78",
          "style": "plain",
          "template": "$ ",
          "type": "session"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 2
}
