{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#cbff78",
          "style": "plain",
          "template": "{{ .UserName }} ",
          "type": "session"
        },
        {
          "foreground": "#81adff",
          "style": "plain",
          "template": "{{ .HostName }}",
          "type": "session"
        },
        {
          "foreground": "#028513",
		  "style": "plain",
          "template": "[{{ .Path }}]",
          "type": "path"
        },
		{
          "background": "lightCyan",
          "foreground": "#fff",
          "leading_diamond": "\ue0c7",
          "properties": {
            "branch_icon": ""
          },
          "style": "diamond",
          "template": " git({{ .HEAD }}) ",
          "trailing_diamond": "\ue0c6",
          "type": "git"
        },
        {
          "foreground": "#cbff78",
          "style": "plain",
          "template": "$ ",
          "type": "session"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 2
}
